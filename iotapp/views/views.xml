<odoo>    
    <!--Vistas Tree-->
    
    <record model = "ir.ui.view" id = "view_tree_organizaciones">
        <field name = "name">iotapp.view_tree_iot</field>
        <field name = "model">iot.organizacion</field>
        <field name = "arch" type = "xml">
            <tree>
                <field name = "org_codigo"/>
                <field name = "org_nombre"/>
                <field name = "sel_flota" optional="1"/>
                <field name = "sel_activos" optional="1"/>
                <field name = "sel_trabajadores" optional="1"/>
            </tree>
        </field>
    </record>

    <record model = "ir.ui.view" id = "view_tree_grupo">
        <field name = "name">iotapp.view_tree_iot</field>
        <field name = "model">iot.grupo</field>
        <field name = "arch" type = "xml">
            <tree>
                <field name = "codigo"/>
                <field name = "codigo_grupo"/>
                <field name = "nombre"/>
            </tree>
        </field>
    </record>

    <record model = "ir.ui.view" id = "view_tree_iot_dispositivo_modelo">
        <field name = "name">iotapp.view_tree_iot_dispositivo_modelo</field>
        <field name = "model">iot.dispositivo.modelo</field>
        <field name = "arch" type = "xml">
            <tree>
                <field name = "codigo_modelo"/>
                <field name = "descripcion_modelo"/>
            </tree>
        </field>
    </record>

    <record model = "ir.ui.view" id = "view_tree_iot_dispositivo_dato">
        <field name = "name">iotapp.view_tree_iot_dispositivo_dato</field>
        <field name = "model">iot.dispositivo.dato</field>
        <field name = "arch" type = "xml">
            <tree>
                <field name = "descripcion"/>
                <field name = "tipo_dato"/>
                <field name = "unidad_medidda"/>
                <field name = "valor_numerico"/>
                <field name = "valor_min_num"/>
                <field name = "valor_max_num"/>
                <field name = "valor_entero"/>
                <field name = "valor_min_entero"/>
                <field name = "valor_max_entero"/>
                <field name = "texto"/>
            </tree>
        </field>
    </record>

    <record model = "ir.ui.view" id = "view_tree_usuario">
        <field name = "name">iotapp.view_tree_iot</field>
        <field name = "model">iot.usuario</field>
        <field name = "arch" type = "xml">
            <tree>
                <field name = "user_id"/>
                <field name = "nombre_usuario" optional="1"/>
                <field name = "contrasena" optional="1"/>
                <field name = "name_user"/>
                <field name = "last_name_user"/>
                <field name = "email"/>
                <field name = "pers_email" optional="1"/>
                <field name = "telf_perso"/>
                <field name = "telf_casa" optional="1"/>
                <field name = "movil"/>
                <field name = "otro_telf" optional="1"/>
                <field name = "organizacion_id"/>
            </tree>
        </field>
    </record>

    <record model = "ir.ui.view" id = "view_tree_conductor">
        <field name = "name">iotapp.view_tree_iot_conductor</field>
        <field name = "model">iot.conductor</field>
        <field name = "arch" type = "xml">
            <tree>
                <field name = "conductor_nombre"/>
                <field name = "conductor_apellido" optional="1"/>
                <field name = "conductor_vehiculo"/>
                <field name = "conductor_mail"/>
                <field name = "conductor_viaje_id" optional="1"/>
            </tree>
        </field>
    </record>

    <!--VISTAS FORM-->
    <!--Acciones de ventana del menu organizacion-->

    <record id = "view_form_organizaciones" model = "ir.ui.view">
        <field name = "name">view.form.iot.organizacion</field>
        <field name = "model">iot.organizacion</field>
        <field name = "arch" type = "xml">
            <form>
                <sheet>Registre los datos de su organizacion
                    <group>
                        <field name = "org_nombre"/>
                        <field name = "org_codigo"/>
                    </group>
                </sheet>
                <sheet>Seleccione la opcion de acuerdo al servicio prestado a su organizacion
                    <group>
                        <field name = "sel_flota" widget = "radio"/>
                        <field name = "sel_activos" widget = "radio"/>
                        <field name = "sel_trabajadores" widget = "radio"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--VISTA FORM GRUPO-->
    <record id = "view_form_grupo" model = "ir.ui.view">
        <field name = "name">view.form.iot.grupo</field>
        <field name = "model">iot.grupo</field>
        <field name = "arch" type = "xml">
            <form>
                <sheet>Primero seleccione su organizacion para añadir un nuevo grupo
                    <group>
                        <field name = "codigo"/>
                        <field name = "codigo_grupo"/>
                        <field name = "nombre"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!--VISTA FORM MODELO DE DISPOSITIVO-->
    <record id = "view_form_iot_dispositivo_modelo" model = "ir.ui.view">
        <field name = "name">view.form.iot.dispositivo.modelo</field>
        <field name = "model">iot.dispositivo.modelo</field>
        <field name = "arch" type = "xml">
            <form>
                <sheet>Añadir el modelo de su dispositivo
                    <group>
                        <field name = "codigo_modelo"/>
                        <field name = "descripcion_modelo"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    

    <!--VISTA FORM USUARIOS-->
    <record id = "view_form_usuario" model = "ir.ui.view">
        <field name = "name">view.form.iot.usuario</field>
        <field name = "model">iot.usuario</field>
        <field name = "arch" type = "xml">
            <form>
                <sheet>Datos de la cuenta
                    <group>
                        <field name = "nombre_usuario"/>
                        <field name = "contrasena"/>
                    </group>
                </sheet>
                <sheet>Identificacion de Usuario
                    <group>
                        <field name = "user_id"/>
                    </group>
                </sheet>
                <sheet>Datos Personales
                    <group>
                        
                        <field name = "name_user"/>
                        <field name = "last_name_user"/>
                    
                        <field name = "email"/>
                        <field name = "pers_email"/>
                    
                        <field name = "telf_perso"/>
                        <field name = "telf_casa"/>
                        <field name = "movil"/>
                        <field name = "otro_telf"/>
                    
                        <field name = "organizacion_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--VISTA FORM CONDUCTORES-->

    <record id = "view_form_conductor" model = "ir.ui.view">
        <field name = "name">view.form.iot.conductor</field>
        <field name = "model">iot.conductor</field>
        <field name = "arch" type = "xml">
            <form>
                <sheet>Registro de Conductores
                    <group>
                        <field name="conductor_nombre"/>
                        <field name="conductor_apellido"/>
                        <field name="conductor_vehiculo"/>
                        <field name="conductor_mail"/>
                        <field name="conductor_viaje_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    

    <!--Acciones de ventana del menu PRINCIPAL-->
    <!--Acciones de ventana del menu CONFIGURACION-->

    <record model ="ir.actions.act_window" id="action_view_organizacion">
        <field name="name">Organizaciones</field>
        <field name="res_model">iot.organizacion</field>     
    </record>

    <record model ="ir.actions.act_window" id="action_view_grupo">
        <field name="name">Grupos</field>
        <field name="res_model">iot.grupo</field>  
    </record>

    <record model ="ir.actions.act_window" id="action_view_dispositivo">
        <field name="name">Dispositivos</field>
        <field name="res_model">iot.dispositivo</field>     
    </record>

    <record model ="ir.actions.act_window" id="action_view_dispositivo_modelo">
        <field name="name">Modelos</field>
        <field name="res_model">iot.dispositivo.modelo</field>     
    </record>

    <record model ="ir.actions.act_window" id="action_view_dispositivo_dato">
        <field name="name">Datos</field>
        <field name="res_model">iot.dispositivo.dato</field>     
    </record>

    <record model ="ir.actions.act_window" id="action_view_usuario">
        <field name="name">Usuarios</field>
        <field name="res_model">iot.usuario</field>     
    </record>
  
    <record model ="ir.actions.act_window" id="action_view_geocerca">
        <field name="name">Geocerca</field>
        <field name="res_model">iot.geocerca</field>     
    </record>

    <!--Acciones de ventana del menu FLOTA-->
    <record model ="ir.actions.act_window" id="action_view_conductor">
        <field name="name">Conductores</field>
        <field name="res_model">iot.conductor</field>     
    </record>

    

    <!--Menus del PRINCIPAL-->
    <menuitem id="menu_principal" 
                name="Servicio en la nube de internet de las cosas" 
                parent="" 
                action="action_view_organizacion"/>
    
    <menuitem id="menu_configuracion" 
                name="Configuracion" 
                parent="iotapp.menu_principal" 
                action=""/>

    
    <!--Menus del CONFIGURACION-->
  

    <menuitem id="menu_organizacion" 
                name="Organizaciones" 
                parent="iotapp.menu_configuracion" 
                
                action="iotapp.action_view_organizacion"/>

    <menuitem id="menu_grupo" 
                name="Grupo" 
                parent="iotapp.menu_configuracion" 
                
                action="iotapp.action_view_grupo"/>

    <menuitem id="menu_dispositivo"
                name="Dispositivo"
                parent="iotapp.menu_configuracion"
                
                action="iotapp.action_view_dispositivo"/>

    <menuitem id="menu_dispositivo_modelo"
                name="Modelo"
                parent="iotapp.menu_dispositivo"
                
                action="iotapp.action_view_dispositivo_modelo"/>

    <menuitem id="menu_dispositivo_dato"
                name="Dato"
                parent="iotapp.menu_dispositivo"
                
                action="iotapp.action_view_dispositivo_dato"/>

    <menuitem id="menu_usuario" 
                name="Usuario" 
                parent="iotapp.menu_configuracion" 
                
                action="iotapp.action_view_usuario"/>

    <menuitem id="menu_geocerca" 
                name="Geocercas" 
                parent="iotapp.menu_configuracion" 
                action="iotapp.action_view_geocerca"/>
    
    <!--MENU FLOTA-->
 
    <menuitem id="menu_flota" 
                name="Flota" 
                parent="iotapp.menu_principal" 
                action=""/>

    <menuitem id="menu_conductor" 
                name="Conductores" 
                parent="iotapp.menu_flota" 
                action="iotapp.action_view_conductor"/>

    
</odoo>